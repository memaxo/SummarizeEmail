# ESSENTIAL FOR LOCAL TESTING
# LLM Provider - Choose between 'gemini' (default) or 'openai'
LLM_PROVIDER=gemini

# Google Gemini API (default provider)
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL_NAME=gemini-2.5-flash

# OpenAI API (alternative provider)
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL_NAME=gpt-4o-mini

# Local testing mode - uses mock Graph API instead of real Azure
USE_MOCK_GRAPH_API=true
MOCK_GRAPH_API_URL=http://localhost:8001

# Database (uses Docker container)
DATABASE_URL=postgresql://user:password@localhost:5432/email_summarizer

# Redis (uses Docker container)
REDIS_URL=redis://localhost:6379

# API Settings
API_TITLE=Email Summarizer API
API_VERSION=1.0.0
ENVIRONMENT=development

# =============================================================
# AZURE CREDENTIALS - NOT NEEDED FOR LOCAL TESTING
# =============================================================
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
# AZURE_TENANT_ID=your-tenant-id
# AZURE_REDIRECT_URI=http://localhost:8000/auth/callback

# =============================================================
# OPTIONAL SETTINGS - DEFAULTS WORK FOR LOCAL TESTING
# =============================================================
# LOG_LEVEL=INFO
# CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
# SECRET_KEY=your-secret-key-for-jwt
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================
# PRODUCTION ONLY
# =============================================================
# SENTRY_DSN=your-sentry-dsn
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_REGION=us-east-1
# Google Cloud Service Account Configuration
GOOGLE_APPLICATION_CREDENTIALS=.creds/fox-et-video-intel-sandbox-24a1c0ca43a5.json
GOOGLE_CLOUD_PROJECT=fox-et-video-intel-sandbox
GOOGLE_CLOUD_LOCATION=us-west1
GEMINI_MODEL_NAME=gemini-2.5-flash
